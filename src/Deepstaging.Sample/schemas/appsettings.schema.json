{
  "$id": "root",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "Deepstaging": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Sample": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "MyConfiguration": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Name": {
                  "type": "string",
                  "description": "This is a sample configuration property."
                }
              },
              "required": [
                "Name"
              ],
              "description": "My Configuration"
            },
            "MyConfigurationExtensions": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "YetAnotherConfiguration": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "IsEnabled": {
                      "type": "boolean",
                      "description": "Is enabled flag."
                    },
                    "Description": {
                      "type": "string",
                      "description": "Description of the feature."
                    }
                  },
                  "required": [
                    "IsEnabled",
                    "Description"
                  ],
                  "description": "Yet another configuration"
                }
              },
              "required": [
                "YetAnotherConfiguration"
              ]
            },
            "OtherConfiguration": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Age": {
                  "type": "integer",
                  "description": "The age of the person."
                }
              },
              "required": [
                "Age"
              ],
              "description": "Other configuration"
            }
          },
          "required": [
            "MyConfiguration",
            "MyConfigurationExtensions",
            "OtherConfiguration"
          ]
        }
      },
      "required": [
        "Sample"
      ]
    }
  },
  "required": [
    "Deepstaging"
  ]
}