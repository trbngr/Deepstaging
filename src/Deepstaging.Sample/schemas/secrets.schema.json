{
  "$id": "root",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "Deepstaging": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Sample": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "MyConfiguration": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ApiKey": {
                  "type": "string",
                  "description": "This is a secret API key."
                }
              },
              "required": [
                "ApiKey"
              ],
              "description": "My Configuration"
            },
            "MyConfigurationExtensions": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "YetAnotherConfiguration": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "SigningSecret": {
                      "type": "string",
                      "description": "Description of the feature."
                    }
                  },
                  "required": [
                    "SigningSecret"
                  ],
                  "description": "Yet another configuration"
                }
              },
              "required": [
                "YetAnotherConfiguration"
              ]
            }
          },
          "required": [
            "MyConfiguration",
            "MyConfigurationExtensions"
          ]
        }
      },
      "required": [
        "Sample"
      ]
    }
  },
  "required": [
    "Deepstaging"
  ]
}